{
  "name": "bedrock-miner",
  "displayName": "Bedrock Miner",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.83.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "title": "Bedrock Miner",
      "properties": {
        "bedrock-miner.projectFolderPath": {
          "type": "string",
          "default": "",
          "title": "Project Folder Path",
          "description": "default is \"C:\\Users\\%USERNAME%\\Documents\\Bedrock Miner\""
        }
      }
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "bm-menu",
          "title": "Bedrock Miner",
          "icon": "./resources/activitybar-icon.svg"
        }
      ]
    },
    "views": {
      "bm-menu": [
        {
          "id": "bm-menu-projects",
          "name": "Bedrock Miner"
        }
      ]
    },
    "viewsWelcome": [],
    "commands": [
      {
        "command": "bm.refleshProjects",
        "title": "Reflesh",
        "icon": "$(sync)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "bm.refleshProjects",
          "when": "view == bm-menu-projects",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.83.0",
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "20.2.5",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "eslint": "^8.41.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^5.1.3",
    "@vscode/test-electron": "^2.3.2"
  }
}
